# Backend server configuration
# Copy this to .env and fill in your values

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# AI Provider Selection (ollama, openrouter, or deepseek)
AI_PROVIDER=ollama

# Ollama Configuration (for local model)
OLLAMA_URL=http://localhost:11434

# OpenRouter Configuration (free tier)
# Sign up at https://openrouter.ai to get your key
OPENROUTER_API_KEY=

# DeepSeek Configuration (optional)
# Sign up at https://platform.deepseek.com to get your key
DEEPSEEK_API_KEY=

# Security Keys (generate random strings)
JWT_SECRET=your-jwt-secret-here-change-this
ENCRYPTION_KEY=your-encryption-key-here-change-this

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/ai-proxy.log
